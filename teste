package com.notre_projet_en_poo;

public abstract class Employer {
	
        public String nom;
        public String prenom;
        public int age;
        public Employer(String Nom,String Prenom,int Age) {
        	
        	this.nom=Nom;
        	this.prenom=Prenom;
        	this.age=Age;
        	
        	
        }
//salaire une methode abstraite de la class employer qui peut etre redifinir par les classes filles 
         
       abstract void salair();
        
	public static void main(String[] args) {
		Guichetier G=new Guichetier(" peaul "," jean ",29,"3767FGH");
		G.salair();
		Controleur C=new Controleur(" MHT "," Ali ",20,"GHJ3556");
		C.salair();
		Gestionnaire T=new Gestionnaire(" ALi "," kaka ",56,"562478DXAC");
		T.salair();
		System.out.println("le guichetier est " + G.nom+G.prenom + " de matricul " + G.matricul);
		System.out.println("le Controleur est " + C.nom  +  C.prenom + " de matricul " + C.matricul);
		System.out.println("le gestionnaire est " + T.nom  +  T.prenom + " de matricul " + T.matricul);

	}

}

